
@media (min-width: 1366px) and (max-width: 1440px) {

.header { padding: 17px 10px 17px 0px }

}

@media only screen and (max-width: 1024px) {

.header { padding: 17px 10px 17px 0px }
.dash_tabs a { font-size: 12px; padding: 30px 0px 30px 10px; }
.dash_tabs a span { padding-right: 5px; }

.dash_tab_content ul.car_listing figure { width: 110px; height: 90px; }
.dash_tab_content ul.car_listing .content { padding: 10px 0 0 15px; width: 215px; }
.dash_tab_content ul.car_listing .content h3 { width: 187px; }
.tab_serach { margin: 15px 10px 10px 10px; }
.right_side { padding: 10px; }
.car_slider_warap figure { min-height: 380px; }
.car_detail .car_model { font-size: 15px; }
.car_detail ul li { padding: 10px 0; }
.car_detail ul li span { font-size: 18px; min-width: 35px; }
.car_detail ul li p { font-size: 12px; }
.copyright_text { display: none; }

}

@media (min-width: 568px) and (max-width: 812px) {

.header { padding-right: 10px; }
.header .logo img { width: 120px; }
.login_dp { width: 40px; height: 40px; }
.login_name { font-size: 12px; }
.login_name small { font-size: 10px; }
.login_name:after { font-size: 17px; top: 10px; }

.left_side { width: 100%; position: fixed; left: -100%; top: 0px; z-index: 9999; background-color: #fff; height: 100vh; transition: all 0.3s ease; }
.left_side_close { display: block; }
.fltr_btn { display: inline-block; }
.dash_tabs a { text-align: center; padding: 15px 0; font-size: 11px; }
.dash_tabs a span.icon-icon-1 { font-size: 15px; }
.dash_tabs a span { display: block; padding-right: 0px; font-size: 20px; padding-bottom: 5px; }

.dash_tab_content ul.car_listing figure { width: 120px; }
.dash_tab_content ul.car_listing .content { padding: 10px 10px; }
.dash_tab_content ul.car_listing .content h3 { width: 215px; }


.sort_parent { text-align: left; margin: 7px 0 0; }
.tab_serach { margin: 10px; }
.tab_serach label,
.tab_serach select,
.tab_serach input { font-size: 11px; }

.right_side { width: 100%; padding: 10px; }
.car_slider_warap figure { min-height: 450px; background-position: 100% 100%; }

.ref_num {line-height: 13px; right: 10px; top: 10px; font-size: 10px; }
.ref_num span { font-size: 12px; }
.car_slider_warap .slick-dots button { width: 7px; height: 7px; }
.car_slider_warap .slick-dots li { margin: 0 2px; }
.car_slider_warap .slick-dots { text-align: left; z-index: 999; top: 0px; left: 10px; right: auto; bottom: auto; }
.car_detail { padding: 25px 15px 15px; }
.car_detail .left { width: 55%; }
.car_detail .car_model { font-size: 16px; margin: 0 0 15px; }
.car_detail ul li { padding: 10px 0px; }
.car_detail ul li span { min-width: 40px; font-size: 18px; text-align: center; }
.car_detail ul li p { font-size: 13px; }
.car_detail ul li small { font-size: 11px; }
.car_detail .right { width: 40%; margin: 0; }

.copyright_text { display: none; }

}

@media (min-width: 320px) and (max-width: 414px) {

.header { padding-right: 10px; }
.header .logo img { width: 80px; }
.login_dp { width: 40px; height: 40px; }
.login_name { font-size: 12px; }
.login_name small { font-size: 10px; }
.login_name:after { font-size: 17px; top: 10px; }

.left_side { width: 100%; position: fixed; left: -100%; top: 0px; z-index: 9999; background-color: #fff; height: 100vh; transition: all 0.3s ease; }
.left_side_close { display: block; }
.fltr_btn { display: inline-block; }
.dash_tabs a { text-align: center; padding: 15px 0; font-size: 11px; }
.dash_tabs a span.icon-icon-1 { font-size: 15px; }
.dash_tabs a span { display: block; padding-right: 0px; font-size: 20px; padding-bottom: 5px; }
.dash_tab_content ul.car_listing figure { background-position: 100%; }

.dash_tab_content ul.car_listing figure { width: 100%; float: none; }
.dash_tab_content ul.car_listing .content { padding: 10px 10px; }
.dash_tab_content ul.car_listing .content h3 { font-size: 12px; width: 215px; margin: 0 0 7px; }
.dash_tab_content ul.car_listing .content p,
.dash_tab_content ul.car_listing .content p strong { font-size: 11px; line-height: 11px; }

.sort_parent { text-align: left; margin: 7px 0 0; }
.tab_serach { margin: 10px; }
.tab_serach label,
.tab_serach select,
.tab_serach input { font-size: 11px; }

.right_side { width: 100%; padding: 10px; }
.car_slider_warap figure { min-height: 300px; }
.shadow { min-height: 90px; }
.ref_num {line-height: 13px; right: 10px; top: 10px; font-size: 10px; }
.ref_num span { font-size: 12px; }
.car_slider_warap .slick-dots button { width: 7px; height: 7px; }
.car_slider_warap .slick-dots li { margin: 0 2px; }
.car_slider_warap .slick-dots { text-align: left; z-index: 999; top: 0px; left: 10px; right: auto; bottom: auto; }
.car_detail { padding: 15px; }
.car_detail .left { width: 100%; }
.car_detail .car_model { font-size: 16px; margin: 0 0 15px; }
.car_detail ul li { padding: 10px 0px; }
.car_detail ul li span { min-width: 40px; font-size: 18px; text-align: center; }
.car_detail ul li p { font-size: 13px; }
.car_detail ul li small { font-size: 11px; }
.car_detail .right { width: 100%; margin: 20px 0 0; }

.copyright_text { display: none; }

}

@media (max-width: 320px) {

.car_slider_warap figure { min-height: 250px; }

}